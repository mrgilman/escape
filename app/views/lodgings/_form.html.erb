<%= form_for [@trip, @lodging] do |f| %>
  <%= f.label(:name, "Enter the name of the hotel") %>
  <%= f.text_field :name %>
  <br/>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <br/>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <br/>
  <%= f.label :state %>
  <%= f.text_field :state %>
  <br/>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <br/>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>
  <br/>
  <%= f.label :start_date %>
  <%= f.text_field :start_date, :id => 'dateBegin' %>
  <br />
  <%= f.label :end_date %>
  <%= f.text_field :end_date, :id => 'dateEnd' %>
  <br/>
  <%= f.submit %>
<% end %>

