<div class="span6 leftcol well">
  <%= image_tag("tripit.png") %><hr/>
<% @tripits.each do |tripit| %>
  <div class="row"><div class="span4"><h3><%= tripit.display_name %></h3></div><div class="span2"><%= link_to "Import this trip", tripit_path(:tripit_id => tripit.id), :method => :post, :class => 'btn btn-warning' %></div></div>
  <%= tripit.primary_location %>, <%= tripit.start_date %> - <%= tripit.end_date %><hr class="light">
<% end %>
</div>
